{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/fonts/*": ["./assets/fonts/*"],
      "@/images/*": ["./assets/images/*"],
      "@/colors/*": ["./assets/colors/*"],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
